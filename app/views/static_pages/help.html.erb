<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="form">
      <div class="heading">Questions, comments, concerns?</div>

      <%= form_for(@support, url: api_v1_supports_path(@support)) do |f| %>            
        <div class="form-inputs">
      		<div class="form-group">
						<%= f.collection_select :reason, Support::REASON, :to_s, :titleize, {prompt: nil}, {:class => 'form-control'} %>
      		</div>

      		<div class="form-group">
      	    <%= f.text_field :name,
      	                autofocus: true,
      	                input_html: { autocomplete: "name", class: "form-control", placeholder: "Your Name" }%>
      		</div>
					
      		<div class="form-group">
      	    <%= f.text_field :email,
      	                autofocus: true,
      	                input_html: { autocomplete: "email", class: "form-control", placeholder: "Enter Email *" }%>
      		</div>
					
      		<div class="form-group">
      	    <%= f.text_field  :message,
      	                autofocus: true,
      	                input_html: { autocomplete: "message", class: "form-control", placeholder: "Enter Message *" }%>
      		</div>
        </div>
      
        <div class="form-actions">
      		<div class="form-group">
	          <%= f.submit "Submit!", class: "btn" %>							
      		</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
